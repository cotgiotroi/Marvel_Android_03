<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="movie"
            type="com.framgia.moviedb.data.model.Movie"
            />
        <variable
            name="onItemClick"
            type="com.framgia.moviedb.utils.OnItemClickListener"/>

    </data>
    <RelativeLayout
        android:layout_width="@dimen/with_item"
        android:layout_height="@dimen/height_item"
      >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item"
            android:clickable="true"
            app:imageMovie="@{movie.background}"
            tools:ignore="ContentDescription"
            android:onClick="@{() -> onItemClick.onClick(movie)}"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_textview"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@{movie.title}"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>
</layout>